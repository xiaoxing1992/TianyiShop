<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/dialog_close_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="8dp"
        android:src="@drawable/dialog_close" />

    <LinearLayout
        android:id="@+id/dialog_goods_congtent_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_close_img"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialog_goods_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_goods_shop_price"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="￥102.9"
                android:textColor="#FC6C88"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dialog_goods_stock_number"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="库存62件"
                android:textColor="#666"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dialog_goods_restrict_tv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="限购5件"
                android:textColor="#666"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_goods_congtent_ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_goods_congtent_ll"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="购买数量" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/add_shape"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/jianhao_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"

                android:src="@drawable/reduce_selector" />

            <ImageView

                android:layout_width="0.7dp"
                android:layout_height="match_parent"
                android:background="#bcbcbc" />

            <TextView
                android:id="@+id/pay_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:text="1" />

            <ImageView

                android:layout_width="0.7dp"
                android:layout_height="match_parent"
                android:background="#bcbcbc" />

            <ImageView
                android:id="@+id/jiahao_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"

                android:src="@drawable/add_selector" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/xuxian_img"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/dialog_goods_congtent_ll2"
        android:layout_marginTop="5dp"
        android:background="@drawable/xuxian_shape"
        android:layerType="software" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@id/xuxian_img"
        android:layout_centerHorizontal="true"
        android:layout_margin="2dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/login_button_selector"
        android:gravity="center"
        android:text="确定"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/add_button"></LinearLayout>
</RelativeLayout>