<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_empty_shopcart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:visibility="gone">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/shopping_trolley_empty" />

        <TextView
            android:id="@+id/tv_empty_cart_tobuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_empty"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:paddingBottom="5dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="5dp"
            android:text="购物车还是空的哦
      快去逛逛吧~"
            android:textSize="15sp" />

        <Button
            android:id="@+id/bt_empty_cart"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/tv_empty_cart_tobuy"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_button_selector"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="逛一逛"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</LinearLayout>