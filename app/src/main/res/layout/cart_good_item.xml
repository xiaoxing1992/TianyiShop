<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/shangping_cart_ll"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox

            android:id="@+id/cb_child_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:button="@null"
            android:drawableLeft="@drawable/goods_cart_checked_select" />

        <ImageView
            android:id="@+id/child_good_img"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/child_good_title_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="热销套装|竹炭镜头矿物质面膜110g"
                android:textSize="19sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/child_good_shop_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="￥102.9"
                    android:textColor="#FC6C88"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/child_good_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="数量：1"
                    android:textColor="#9a9a9a" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/coupons" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/pledge" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/delete_child_num_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:text="购买数量"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/add_shape"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/child_jianhao_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"

                android:src="@drawable/reduce_selector" />

            <ImageView

                android:layout_width="0.7dp"
                android:layout_height="match_parent"
                android:background="#bcbcbc" />

            <TextView
                android:id="@+id/child_pay_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:text="1" />

            <ImageView

                android:layout_width="0.7dp"
                android:layout_height="match_parent"
                android:background="#bcbcbc" />

            <ImageView
                android:id="@+id/child_jiahao_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"

                android:src="@drawable/add_selector" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>